zookeeper.clientCnxnSocket=org.apache.zookeeper.ClientCnxnSocketNetty

zookeeper.ssl.client.enable=true
zookeeper.ssl.keystore.location={{ kafka_zookeeper_etc_directory }}/pki/{{ inventory_hostname_short }}.jks
zookeeper.ssl.keystore.password={{ kafka_zookeeper_keystore_password }}
zookeeper.ssl.truststore.location={{ kafka_zookeeper_etc_directory }}/pki/{{ inventory_hostname_short }}.jks
zookeeper.ssl.truststore.password={{ kafka_zookeeper_keystore_password }}
