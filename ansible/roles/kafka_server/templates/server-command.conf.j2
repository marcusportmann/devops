ssl.protocol=TLS
ssl.keystore.location={{ kafka_etc_directory }}/pki/kafka-{{ kafka_cluster_name }}-server-keystore.jks
ssl.keystore.password={{ kafka_server_keystore_password }}
ssl.truststore.location={{ kafka_etc_directory }}/pki/kafka-{{ kafka_cluster_name }}-server-truststore.jks
ssl.truststore.password={{ kafka_server_truststore_password }}
security.protocol=SASL_SSL
sasl.mechanism=SCRAM-SHA-256
sasl.jaas.config=org.apache.kafka.common.security.scram.ScramLoginModule required username="kafka" password="{{ kafka_server_kafka_user_password }}";




