Client {
  org.apache.zookeeper.server.auth.DigestLoginModule required
  username="{{ kafka_server_zookeeper_user_username }}"
  password="{{ kafka_server_zookeeper_user_password }}";
};

KafkaServer {
  org.apache.kafka.common.security.scram.ScramLoginModule required
  username="{{ kafka_server_user_username }}"
  password="{{ kafka_server_user_password }}";
};
