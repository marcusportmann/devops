zookeeper.clientCnxnSocket=org.apache.zookeeper.ClientCnxnSocketNetty
zookeeper.ssl.client.enable=true
zookeeper.ssl.keystore.location={{ kafka_etc_directory }}/pki/kafka-{{ kafka_cluster_name }}-server-keystore.jks
zookeeper.ssl.keystore.password={{ kafka_server_keystore_password }}
zookeeper.ssl.truststore.location={{ kafka_etc_directory }}/pki/kafka-{{ kafka_cluster_name }}-server-truststore.jks
zookeeper.ssl.truststore.password={{ kafka_server_truststore_password }}
