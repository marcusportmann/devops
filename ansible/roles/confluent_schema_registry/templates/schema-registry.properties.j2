
{% if (inventory_hostname in schema_registry_cluster1_actual_hosts)  %}
{% set kafka_bootstrap_servers_cluster1 = [] -%}
{% for kafka_server_host in kafka_server_cluster1_actual_hosts %}
{% set _ = kafka_bootstrap_servers_cluster1.append("SASL_SSL://%s:%d" % (kafka_server_host, kafka_secure_broker_port)) %}
{% endfor %}
kafkastore.bootstrap.servers = {{ kafka_bootstrap_servers_cluster1 | join(',') }}
{% elif (inventory_hostname in schema_registry_cluster2_actual_hosts)  %}
{% set kafka_bootstrap_servers_cluster2 = [] -%}
{% for kafka_server_host in kafka_server_cluster2_actual_hosts %}
{% set _ = kafka_bootstrap_servers_cluster2.append("SASL_SSL://%s:%d" % (kafka_server_host, kafka_secure_broker_port)) %}
{% endfor %}
kafkastore.bootstrap.servers = {{ kafka_bootstrap_servers_cluster2 | join(',') }}
{% endif %}

kafkastore.topic.replication.factor=3

host.name={{ inventory_hostname }}

listeners=https://0.0.0.0:8443

inter.instance.protocol=https

master.eligibility=true

kafkastore.security.protocol=SASL_SSL
kafkastore.ssl.protocol=TLS
kafkastore.ssl.keystore.type=PKCS12
kafkastore.ssl.keystore.location={{ schema_registry_etc_directory }}/pki/schema-registry.p12
kafkastore.ssl.keystore.password={{ schema_registry_keystore_password }}
kafkastore.ssl.truststore.type=PKCS12
kafkastore.ssl.truststore.location={{ schema_registry_etc_directory }}/pki/ca.p12
kafkastore.ssl.truststore.password={{ ca_truststore_password }}
kafkastore.sasl.mechanism=SCRAM-SHA-256
kafkastore.sasl.jaas.config=org.apache.kafka.common.security.scram.ScramLoginModule required username="{{ kafka_schema_registry_user_username }}" password="{{ kafka_schema_registry_user_password }}";

ssl.protocol=TLS
ssl.keystore.type=PKCS12
ssl.keystore.location={{ schema_registry_etc_directory }}/pki/schema-registry.p12
ssl.keystore.password={{ schema_registry_keystore_password }}
ssl.key.password={{ schema_registry_keystore_password }}
ssl.truststore.type=PKCS12
ssl.truststore.location={{ schema_registry_etc_directory }}/pki/ca.p12
ssl.truststore.password={{ ca_truststore_password }}





