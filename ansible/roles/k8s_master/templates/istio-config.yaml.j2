    - name: istio-ingressgateway
      enabled: true

  values:
    gateways:
      istio-ingressgateway:
        labels:
          app: istio-ingressgateway
          istio: istio-ingressgateway
        type: NodePort
        sds:
          enabled: true
        ports:
        - name: status-port
          port: 15020
          targetPort: 15020
        - name: http2
          port: 80
          targetPort: 80
          nodePort: 30080
        - name: https
          port: 443
          targetPort: 443
          nodePort: 30443


{% if (((istio_grafana_enabled is defined) and (istio_grafana_enabled != None) and (istio_grafana_enabled == True)) or ((monitoring_enabled is defined) and (monitoring_enabled != None) and (monitoring_enabled == True) and (monitoring_grafana_enabled is defined) and (monitoring_grafana_enabled != None) and (monitoring_grafana_enabled == True))) %}
        - name: https-grafana
          port: 3000
          targetPort: 3000
          nodePort: 32500
{% endif %}
{% if (((istio_tracing_enabled is defined) and (istio_tracing_enabled != None) and (istio_tracing_enabled == True)) or ((monitoring_enabled is defined) and (monitoring_enabled != None) and (monitoring_enabled == True) and (monitoring_jaeger_enabled is defined) and (monitoring_jaeger_enabled != None) and (monitoring_jaeger_enabled == True))) %}
        - name: https-jaeger
          port: 16686
          targetPort: 16686
          nodePort: 32510
{% endif %}
{% if ((istio_kiali_enabled is defined) and (istio_kiali_enabled != None) and (istio_kiali_enabled == True))  %}
        - name: https-kiali
          port: 20001
          targetPort: 20001
          nodePort: 32520
{% endif %}

{% if (((istio_prometheus_enabled is defined) and (istio_prometheus_enabled != None) and (istio_prometheus_enabled == True)) or ((monitoring_enabled is defined) and (monitoring_enabled != None) and (monitoring_enabled == True) and (monitoring_prometheus_enabled is defined) and (monitoring_prometheus_enabled != None) and (monitoring_prometheus_enabled == True))) %}
        - name: https-prometheus
          port: 9090
          targetPort: 9090
          nodePort: 32530
{% endif %}

{% if ((monitoring_enabled is defined) and (monitoring_enabled != None) and (monitoring_enabled == True))  %}
        - name: https-elasticsearch
          port: 9200
          targetPort: 9200
          nodePort: 32540
        - name: https-kibana
          port: 5601
          targetPort: 5601
          nodePort: 32550
{% endif %}

        - name: tcp
          port: 1400
          targetPort: 1400
          nodePort: 31400
        - name: tls
          port: 1443
          targetPort: 1443
          nodePort: 31443
          
          
    global:
      mtls:
        auto: true
        enabled: false
      proxy:
        accessLogFile: "/dev/stdout"
        logLevel: "debug"
        clusterDomain: {{ k8s_cluster_domain }}
      sds:
        enabled: true
        
{% if ((monitoring_enabled is defined) and (monitoring_enabled != None) and (monitoring_enabled == True))  %}

      tracer:
        zipkin:
          address: monitoring-jaeger-collector.monitoring.system.svc:9411 

{% endif %}        
        
    security:
      selfSigned: false
    sidecarInjectorWebhook:
      rewriteAppHTTPProbe: true
    grafana:
      security:
        enabled: false
    kiali:
      dashboard:        
{% if ((monitoring_enabled is defined) and (monitoring_enabled != None) and (monitoring_enabled == True) and (monitoring_prometheus_enabled is defined) and (monitoring_prometheus_enabled != None) and (monitoring_prometheus_enabled == True)) %}        
        grafanaURL: https://{{ inventory_hostname }}:32500/
        grafanaInClusterURL: http://grafana.monitoring-system.svc.{{ k8s_cluster_domain }}:3000
{% endif %}
        
        jaegerURL: https://{{ inventory_hostname }}:32510/
#         jaegerInClusterURL
        
{% if ((monitoring_enabled is defined) and (monitoring_enabled != None) and (monitoring_enabled == True) and (monitoring_prometheus_enabled is defined) and (monitoring_prometheus_enabled != None) and (monitoring_prometheus_enabled == True)) %}
        prometheusAddr: http://prometheus-server.monitoring-system.svc.{{ k8s_cluster_domain }}:9090        
{% endif %}           
      security:
        enabled: false




