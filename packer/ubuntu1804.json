{
  "variables": {
    "headless": "false",
    "iso_url": "http://cdimage.ubuntu.com/releases/18.04.4/release/ubuntu-18.04.4-server-amd64.iso",
    "iso_checksum_type": "sha256",
    "iso_checksum": "e2ecdace33c939527cbc9e8d23576381c493b071107207d2040af72595f8990b",
    "ssh_username": "cloud-user",
    "ssh_password": "cloud",
    "ssh_port": "22",
    "ssh_wait_timeout": "10000s",
    "build_directory": "build"
  },
  "builders": [
    {
      "type": "virtualbox-iso",
      "boot_command": [
        "<esc><wait>",
        "<esc><wait>",
        "<enter><wait>",
        "/install/vmlinuz<wait>",
        " auto<wait>",
        " biosdevname=0 net.ifnames=0<wait>",
        " console-setup/ask_detect=false console-setup/layoutcode=us console-setup/modelcode=pc105<wait>",
        " debconf/frontend=noninteractive<wait>",
        " debian-installer=en_US<wait>",
        " fb=false<wait>",
        " initrd=/install/initrd.gz<wait>",
        " kbd-chooser/method=us<wait>",
        " keyboard-configuration/layout=USA keyboard-configuration/variant=USA<wait>",
        " locale=en_US<wait>",
        " netcfg/get_domain=localdomain netcfg/get_hostname=localhost<wait>",
        " grub-installer/bootdev=/dev/sda<wait>",
        " noapic<wait>",
        " preseed/url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/ubuntu1804.cfg<wait>",
        " -- <wait>",
        "<enter><wait>"
      ],
      "boot_wait": "5s",
      "disk_size": "15360",
      "guest_additions_path": "VBoxGuestAdditions_{{.Version}}.iso",
      "guest_additions_sha256": "c5e46533a6ff8df177ed5c9098624f6cec46ca392bab16de2017195580088670",
      "guest_os_type": "Ubuntu_64",
      "headless": "{{ user `headless` }}",
      "http_directory": "http",
      "iso_url": "{{ user `iso_url` }}",
      "iso_checksum": "{{ user `iso_checksum` }}",
      "iso_checksum_type": "{{ user `iso_checksum_type` }}",
      "name": "ubuntu1804-virtualbox",
      "output_directory": "{{ user `build_directory` }}/virtualbox/ubuntu1804/",
      "shutdown_command": "echo 'cloud' | sudo -S shutdown -P now",
      "ssh_username": "{{ user `ssh_username` }}",
      "ssh_password": "{{ user `ssh_password` }}",
      "ssh_port": "{{ user `ssh_port` }}",
      "ssh_wait_timeout": "{{ user `ssh_wait_timeout` }}",
      "vm_name": "ubuntu1804",
      "vboxmanage": [
        [
          "modifyvm",
          "{{.Name}}",
          "--memory",
          "1024"
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--cpus",
          "1"
        ]
      ]
    },
    {
      "type": "vmware-iso",
      "boot_command": [
        "<esc><wait>",
        "<esc><wait>",
        "<enter><wait>",
        "/install/vmlinuz<wait>",
        " auto<wait>",
        " biosdevname=0 net.ifnames=0<wait>",
        " console-setup/ask_detect=false console-setup/layoutcode=us console-setup/modelcode=pc105<wait>",
        " debconf/frontend=noninteractive<wait>",
        " debian-installer=en_US<wait>",
        " fb=false<wait>",
        " initrd=/install/initrd.gz<wait>",
        " kbd-chooser/method=us<wait>",
        " keyboard-configuration/layout=USA keyboard-configuration/variant=USA<wait>",
        " locale=en_US<wait>",
        " netcfg/get_domain=localdomain netcfg/get_hostname=localhost<wait>",
        " grub-installer/bootdev=/dev/sda<wait>",
        " noapic<wait>",
        " preseed/url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/ubuntu1804.cfg<wait>",
        " -- <wait>",
        "<enter><wait>"
      ],
      "boot_wait": "5s",
      "disk_size": "15360",
      "disk_type_id": "0",
      "guest_os_type": "ubuntu-64",
      "headless": "{{ user `headless` }}",
      "http_directory": "http",
      "iso_url": "{{ user `iso_url` }}",
      "iso_checksum": "{{ user `iso_checksum` }}",
      "iso_checksum_type": "{{ user `iso_checksum_type` }}",
      "name": "ubuntu1804-vmware",
      "output_directory": "{{ user `build_directory` }}/vmware/ubuntu1804/",
      "shutdown_command": "echo 'cloud' | sudo -S shutdown -P now",
      "ssh_username": "{{ user `ssh_username` }}",
      "ssh_password": "{{ user `ssh_password` }}",
      "ssh_port": "{{ user `ssh_port` }}",
      "ssh_wait_timeout": "{{ user `ssh_wait_timeout` }}",
      "vm_name": "ubuntu1804",
      "vmdk_name": "ubuntu1804",
      "vmx_data": {
        "memsize": "1024",
        "numvcpus": "1",
        "ethernet0.connectiontype": "nat",
        "ethernet0.virtualDev": "vmxnet3",
        "rtc.diffFromUTC": "0"
      }
    },
    {
      "type": "hyperv-iso",
      "boot_command": [
        "<esc><wait10><esc><esc><enter><wait>",
        "set gfxpayload=1024x768<enter>",
        "linux /install/vmlinuz ",
        "preseed/url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/ubuntu1804.cfg ",
        "debian-installer=en_US auto locale=en_US kbd-chooser/method=us ",
        "fb=false debconf/frontend=noninteractive ",
        "netcfg/get_domain=localdomain netcfg/get_hostname=localhost ",
        "grub-installer/bootdev=/dev/sda ",
        "keyboard-configuration/modelcode=SKIP keyboard-configuration/layout=USA ",
        "keyboard-configuration/variant=USA console-setup/ask_detect=false <enter>",
        "initrd /install/initrd.gz<enter>",
        "boot<enter>"             	
      ],
      "boot_wait": "5s",
      "disk_size": "15360",
      "headless": "{{ user `headless` }}",
      "http_directory": "http",
      "iso_url": "{{ user `iso_url` }}",
      "iso_checksum": "{{ user `iso_checksum` }}",
      "iso_checksum_type": "{{ user `iso_checksum_type` }}",
      "name": "ubuntu1804-hyperv",
      "output_directory": "{{ user `build_directory` }}/hyperv/ubuntu1804/",
      "shutdown_command": "echo 'cloud' | sudo -S shutdown -P now",
      "ssh_username": "{{ user `ssh_username` }}",
      "ssh_password": "{{ user `ssh_password` }}",
      "ssh_port": "{{ user `ssh_port` }}",
      "ssh_timeout" : "4h",
      "vm_name": "ubuntu1804",
      "memory": "1024",
      "disk_block_size": "1",
      "cpus": "1",
      "generation": 2,
      "keep_registered": "false",
      "switch_name": "Default Switch"
    }
  ],
  "provisioners": [
    {
      "type": "file",
      "source": "files/ubuntu1804/configure-ubuntu-network",
      "destination": "/tmp/configure-ubuntu-network"
    },
    {
      "type": "file",
      "source": "files/ubuntu1804/resize-root-partition",
      "destination": "/tmp/resize-root-partition"
    },
    {
      "type": "file",
      "source": "files/ubuntu1804/ssh-keygen.service",
      "destination": "/tmp/ssh-keygen.service"
    },
    {
      "type": "shell",
      "execute_command": "echo 'cloud' | {{.Vars}} sudo -S -E bash '{{.Path}}'",
      "expect_disconnect": true,
      "only": [
        "ubuntu1804-vmware",
        "ubuntu1804-virtualbox"
      ],
      "scripts": [
        "scripts/ubuntu1804/base.sh",
        "scripts/ubuntu1804/cloud-init.sh",
        "scripts/ubuntu1804/vmtools.sh",
        "scripts/ubuntu1804/cleanup.sh",
        "scripts/ubuntu1804/zerodisk.sh"
      ]
    }
  ],
 "push": {
    "name": "{{user `atlas_username`}}/{{user `atlas_name`}}",
    "vcs": true
  },
  "post-processors": [
    [{
    "type": "vagrant",
    "keep_input_artifact": true,
    "output": "{{ user `build_directory` }}/boxes/ubuntu1804-{{.Provider}}.box"
    }]
  ]
}
