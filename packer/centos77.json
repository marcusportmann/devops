{
  "variables": {
    "headless": "false",
    "iso_url": "http://ftp.is.co.za/linux/distributions/centos/7.7.1908/isos/x86_64/CentOS-7-x86_64-Minimal-1908.iso",
    "iso_checksum_type": "sha256",
    "iso_checksum": "9a2c47d97b9975452f7d582264e9fc16d108ed8252ac6816239a3b58cef5c53d",
    "ssh_username": "root",
    "ssh_password": "root",
    "ssh_wait_timeout": "1200s",
    "build_directory": "build"
  },
  "builders": [
    {
      "type": "virtualbox-iso",
      "boot_command": [
        "<tab> net.ifnames=0 biosdevname=0 text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/centos77.cfg<enter><wait>"
      ],
      "disk_size": "20480",
      "guest_additions_path": "VBoxGuestAdditions_{{.Version}}.iso",
      "guest_additions_sha256": "c5e46533a6ff8df177ed5c9098624f6cec46ca392bab16de2017195580088670",
      "guest_os_type": "RedHat_64",
      "headless": "{{ user `headless` }}",
      "http_directory": "http",
      "iso_url": "{{ user `iso_url` }}",
      "iso_checksum": "{{ user `iso_checksum` }}",
      "iso_checksum_type": "{{ user `iso_checksum_type` }}",
      "name": "centos77-virtualbox",
      "output_directory": "{{ user `build_directory` }}/virtualbox/centos77/",
      "shutdown_command": "/sbin/halt -p",
      "ssh_username": "{{ user `ssh_username` }}",
      "ssh_password": "{{ user `ssh_password` }}",
      "ssh_wait_timeout": "{{ user `ssh_wait_timeout` }}",
      "vboxmanage": [
        [
          "modifyvm",
          "{{.Name}}",
          "--memory",
          "1024"
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--cpus",
          "1"
        ]
      ]
    },
    {
      "type": "vmware-iso",    	
      "boot_command": [
        "<tab> net.ifnames=0 biosdevname=0 text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/centos77.cfg<enter><wait>"
      ],
      "disk_size": "15360",
      "disk_type_id": "0",
      "guest_os_type": "centos-64",
      "headless": "{{ user `headless` }}",
      "http_directory": "http",
      "iso_url": "{{ user `iso_url` }}",
      "iso_checksum": "{{ user `iso_checksum` }}",
      "iso_checksum_type": "{{ user `iso_checksum_type` }}",
      "name": "centos77-vmware",
      "output_directory": "{{ user `build_directory` }}/vmware/centos77/",
      "shutdown_command": "/sbin/halt -p",
      "ssh_username": "{{ user `ssh_username` }}",
      "ssh_password": "{{ user `ssh_password` }}",
      "ssh_wait_timeout": "{{ user `ssh_wait_timeout` }}",
      "vm_name": "centos77",
      "vmdk_name": "centos77",
      "vmx_data": {
        "memsize": "1024",
        "numvcpus": "1",
        "ethernet0.connectiontype": "nat",
        "ethernet0.virtualDev": "vmxnet3"
      }
    },
    {
      "type": "hyperv-iso",    	
      "boot_command": [
        "<tab> net.ifnames=0 biosdevname=0 text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/centos77.cfg<enter><wait>"
      ],
      "disk_size": "15360",
      "headless": "{{ user `headless` }}",
      "http_directory": "http",
      "iso_url": "{{ user `iso_url` }}",
      "iso_checksum": "{{ user `iso_checksum` }}",
      "iso_checksum_type": "{{ user `iso_checksum_type` }}",
      "name": "centos77-hyperv",
      "output_directory": "{{ user `build_directory` }}/hyperv/centos77/",
      "shutdown_command": "/sbin/halt -p",
      "ssh_username": "{{ user `ssh_username` }}",
      "ssh_password": "{{ user `ssh_password` }}",
      "ssh_timeout": "4h",
      "vm_name": "centos77",
      "memory": "1024",
      "disk_block_size": "1",
      "cpus": "1",
      "generation": 1,
      "keep_registered": "false",
      "switch_name": "Default Switch"           
    }    
  ],
  "provisioners": [
    {
      "type": "file",
      "source": "files/centos77/configure-network",
      "destination": "/tmp/configure-network"
    },
    {
      "type": "file",
      "source": "files/centos77/create-swap-file",
      "destination": "/tmp/create-swap-file"
    },
    {
      "type": "file",
      "source": "files/centos77/resize-root-partition",
      "destination": "/tmp/resize-root-partition"
    },
    {
      "type": "shell",
      "inline":
      [
        "sudo cp /tmp/configure-network /usr/bin/",
        "sudo chmod a+x /usr/bin/configure-network",
        "sudo cp /tmp/create-swap-file /usr/bin/",
        "sudo chmod a+x /usr/bin/create-swap-file",
        "sudo cp /tmp/resize-root-partition /usr/bin/",
        "sudo chmod a+x /usr/bin/resize-root-partition"
      ]
    },
    {
      "type": "shell",
      "execute_command": "{{.Vars}} sh {{.Path}}",
      "expect_disconnect": true,
      "only": [
        "centos77-vmware",
        "centos77-virtualbox",
        "centos77-hyperv"
      ],
      "scripts": [
        "scripts/centos77/base.sh",
        "scripts/centos77/cloud-init.sh",
        "scripts/centos77/vmtools.sh",
        "scripts/centos77/cleanup.sh",
        "scripts/centos77/zerodisk.sh"
      ]
    }
  ],
 "push": {
    "name": "{{user `atlas_username`}}/{{user `atlas_name`}}",
    "vcs": true
  },
  "post-processors": [
    [{
    "type": "vagrant",
    "keep_input_artifact": true,
    "output": "{{ user `build_directory` }}/boxes/centos77-{{.Provider}}.box"
    }]
  ]
}
