{
  "builders": [
    {
      "boot_command": [
         "<esc><esc><esc>",
         "<enter><wait>",
         "/casper/vmlinuz ",
         "root=/dev/sr0 ",
         "initrd=/casper/initrd ",
         "autoinstall ",
         "net.ifnames=0 ", 
         "biosdevname=0 ",
         "ds=nocloud-net;s=http://{{ .HTTPIP }}:{{ .HTTPPort }}/",
         "<enter>"
      ],
      "boot_wait": "5s",
      "cpus": "1",
      "memory": "1024",      
      "disk_size": "51200",
      "guest_additions_path": "VBoxGuestAdditions_{{.Version}}.iso",
      "guest_additions_sha256": "c5e46533a6ff8df177ed5c9098624f6cec46ca392bab16de2017195580088670",
      "guest_os_type": "Ubuntu_64",
      "headless": "{{ user `headless` }}",
      "http_directory": "http/ubuntu-2004",
      "iso_checksum": "{{ user `iso_checksum_type` }}:{{ user `iso_checksum` }}",
      "iso_url": "{{ user `iso_url` }}",
      "name": "ubuntu-2004-virtualbox",
      "output_directory": "{{ user `build_directory` }}/virtualbox/ubuntu-2004/",
      "shutdown_command": "shutdown -P now",
      "ssh_password": "{{ user `ssh_password` }}",
      "ssh_port": "{{ user `ssh_port` }}",
      "ssh_timeout": "{{ user `ssh_timeout` }}",
      "ssh_username": "{{ user `ssh_username` }}",
      "type": "virtualbox-iso",
      "vm_name": "ubuntu-2004"
    },
    {
      "boot_command": [
         "<esc><esc><esc>",
         "<enter><wait>",
         "/casper/vmlinuz ",
         "root=/dev/sr0 ",
         "initrd=/casper/initrd ",
         "autoinstall ",
         "net.ifnames=0 ", 
         "biosdevname=0 ",         
         "ds=nocloud-net;s=http://{{ .HTTPIP }}:{{ .HTTPPort }}/",
         "<enter>"
      ],
      "boot_wait": "5s",
      "cpus": "1",
      "memory": "1024",      
      "disk_size": "51200",
      "disk_type_id": "0",
      "guest_os_type": "ubuntu-64",
      "headless": "{{ user `headless` }}",
      "http_directory": "http/ubuntu-2004",
      "iso_checksum": "{{ user `iso_checksum_type` }}:{{ user `iso_checksum` }}",
      "iso_url": "{{ user `iso_url` }}",
      "name": "ubuntu-2004-vmware",
      "output_directory": "{{ user `build_directory` }}/vmware/ubuntu-2004/",
      "shutdown_command": "shutdown -P now",
      "ssh_password": "{{ user `ssh_password` }}",
      "ssh_port": "{{ user `ssh_port` }}",
      "ssh_timeout": "{{ user `ssh_timeout` }}",
      "ssh_username": "{{ user `ssh_username` }}",
      "type": "vmware-iso",
      "vm_name": "ubuntu-2004",
      "vmdk_name": "ubuntu-2004",
      "vmx_data": {
        "ethernet0.connectiontype": "nat",
        "rtc.diffFromUTC": "0",
        "disk.EnableUUID": "TRUE"
      }
    },
    {
      "boot_command": [
         "<esc><esc><esc>",
         "<enter><wait>",
         "/casper/vmlinuz ",
         "root=/dev/sr0 ",
         "initrd=/casper/initrd ",
         "autoinstall ",
         "net.ifnames=0 ", 
         "biosdevname=0 ",         
         "ds=nocloud-net;s=http://{{ .HTTPIP }}:{{ .HTTPPort }}/",
         "<enter>"
      ],      
      "boot_wait": "5s",
      "cpus": "1",
      "memory": "1024",
      "disk_block_size": "1",
      "disk_size": "51200",
      "generation": 2,
      "headless": "{{ user `headless` }}",
      "http_directory": "http/ubuntu-2004",
      "iso_checksum": "{{ user `iso_checksum_type` }}:{{ user `iso_checksum` }}",
      "iso_url": "{{ user `iso_url` }}",
      "keep_registered": "false",
      "name": "ubuntu-2004-hyperv",
      "output_directory": "{{ user `build_directory` }}/hyperv/ubuntu-2004/",
      "shutdown_command": "shutdown -P now",
      "ssh_password": "{{ user `ssh_password` }}",
      "ssh_port": "{{ user `ssh_port` }}",
      "ssh_timeout": "4h",
      "ssh_username": "{{ user `ssh_username` }}",
      "switch_name": "Default Switch",
      "type": "hyperv-iso",
      "vm_name": "ubuntu-2004"
    }
  ],
  "post-processors": [
    [
      {
        "keep_input_artifact": true,
        "output": "{{ user `build_directory` }}/boxes/ubuntu-2004-{{.Provider}}.box",
        "type": "vagrant"
      }
    ]
  ],
  "provisioners": [
    {
      "destination": "/var/tmp/configure-network",
      "source": "files/ubuntu-2004/configure-network",
      "type": "file"
    },
    {
      "destination": "/var/tmp/resize-root-partition",
      "source": "files/ubuntu-2004/resize-root-partition",
      "type": "file"
    },
    {
      "destination": "/var/tmp/ssh-keygen.service",
      "source": "files/ubuntu-2004/ssh-keygen.service",
      "type": "file"
    },
    {
      "execute_command": "echo 'cloud' | {{.Vars}} bash '{{.Path}}'",
      "expect_disconnect": true,
      "only": [
        "ubuntu-2004-vmware",
        "ubuntu-2004-virtualbox",
        "ubuntu-2004-hyperv"
      ],
      "scripts": [
        "scripts/ubuntu-2004/base.sh",
        "scripts/ubuntu-2004/vmtools.sh",
        "scripts/ubuntu-2004/cloud-init.sh",
        "scripts/ubuntu-2004/vagrant.sh",
        "scripts/ubuntu-2004/cleanup.sh",
        "scripts/ubuntu-2004/zerodisk.sh"
      ],
      "type": "shell"
    }
  ],
  "push": {
    "name": "{{user `atlas_username`}}/{{user `atlas_name`}}",
    "vcs": true
  },
  "variables": {
    "build_directory": "build",
    "headless": "false",
    "iso_checksum": "5035be37a7e9abbdc09f0d257f3e33416c1a0fb322ba860d42d74aa75c3468d4",
    "iso_checksum_type": "sha256",
    "iso_url": "https://releases.ubuntu.com/20.04/ubuntu-20.04.5-live-server-amd64.iso",
    "ssh_password": "root",
    "ssh_port": "22",
    "ssh_timeout": "4h",
    "ssh_username": "root"
  }
}

